{
  "parser": "babel-eslint",
  "env": {
    "node": true,
    "es6": true,
    "jest": true
  },
  "globals": {
    "Promise": true,
    "describe": true,
    "it": true,
    "expect": true
  },
  "extends": "eslint:recommended",
  "rules": {
    "comma-spacing": [1, {"before": false, "after": true}],
    "eol-last": 1,
    "indent": ["warn", 2],
    "key-spacing": 1,
    "no-multi-spaces": 1,
    "keyword-spacing": 1,
    "no-unused-vars": 1,
    "no-trailing-spaces": 1,
    "object-curly-spacing": [1, "always"],
    "quotes": ["warn", "single", { "avoidEscape": true }],
    "semi": 1
  }
}